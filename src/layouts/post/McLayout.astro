---
import BottomExplorer from "../../components/post/explorer/BottomExplorer.astro";
import Index from "../../utils/IndexMDX";
import PostListLayout from "./PostListLayout.astro";

const { frontmatter } = Astro.props
const posts = await Astro.glob("../../pages/post/minecraft/**/*mdx")
const items = Index(posts)
import fs from 'fs'
console.log(fs.readdirSync("./src"))
---
<PostListLayout title={frontmatter.title} description={frontmatter.description} item={items} head={"마인크래프트"}>
    <div class="grow  rounded-xl bg-teal-50 shadow-xl px-4">
        <div class="divide-y-2 divide-teal-200">
            <div class="flex flex-col">
                <h1 class="text-5xl mt-4">{frontmatter.title}</h1>
                <p class="text-end">{frontmatter.date}</p>
            </div>
            <p class="py-1"></p>
        </div>
        <div class="prose max-w-none pb-4 prose-hr:my-2 prose-p:my-1">
            <slot/>
        </div>
        
    </div>
    <BottomExplorer/>
</PostListLayout>


