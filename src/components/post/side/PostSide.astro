---
export interface propsItem {
    title: string,
    sub: subItem[]
}
export interface subItem {
    subtitle: string,
    subUrl: string
}


const { item,title } = Astro.props
const items : propsItem[] = item
---

<div class="sticky m-2 rounded-xl pt-2 bg-teal-200 shadow-xl top-1 mt-4 outline outline-teal-50">
    <p class="m-auto text-center">{title}</p>
    {items.map(x=>(
        <details>
            <summary class="px-2 pb-2 summary-mark">{x.title}</summary>
                <span class="py-2">
                    <ul>
                        {x.sub.map(y =>(
                            <a href={y.subUrl} class="w-full">
                            <li class="px-1 w-full li-marker bg-teal-50">
                                {y.subtitle}
                            </li>
                            </a>
                        ))} 
                    </ul>
                </span>
            
        </details>
    ))}
    
    <style>
        .li-marker::marker{
            content: 👍;  
        }
        .summary-mark{
            display: flex;
            justify-content: space-between;
            &:marker {
                content: none;
            }
            &::after{
                margin-right: 0.5rem;
                transform: rotate(-180deg);
                content: "\276F";
                display: inline-block;
                transition: transform 0.3s;
            }
        }
        details[open] > .summary-mark::after{
            transform: rotate(-270deg);
            
        }
        details[open] > .span-open{
            animation: open 0.3s  ease-out;
        }

        
    </style>

</div>
